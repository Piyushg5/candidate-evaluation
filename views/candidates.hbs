<div class="d-flex flex-column">
  <div class="d-flex mb-4 flex-row">
    <h4 class="d-inline-block">Candidates</h4>
    <a
      href="/candidates/add"
      class="ml-2 btn btn-primary btn-sm"
      style="height: 31px;"
      type="button"
    >Add</a>
    <div class="ml-auto w-50">
  <form method="get" action="/candidates">
    {{> search}}
  </form>
</div>
  </div>
  <div>
    <table class="table d-block">
      <thead class="w-100 d-table">
        <tr>
          <th scope="col">Candidate</th>
          <th scope="col">Experience</th>
          <th scope="col">Position</th>
          <th scope="col">Address</th>
          <th scope="col">Contact No.</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody class="w-100 d-table">
        {{#if result}}
        {{#each result}}
          <tr>
              <td>{{name this}}</td>
              <td>{{experience_level this }}</td>
              <td>{{position_applied this}}</td>
              <td>{{address this}}</td>
              <td>{{contact_no this}}</td>
              <td align="right">
                  
                  <a href="/candidate/update/{{id this}}" type="button" class="btn btn-primary btn-sm rounded-0 a-btn-slide-text">Edit</a>
                  <a onclick="return confirm('Are you sure you want to delete this record?');" href="/candidate/delete/{{id this}}" type="button" class="btn btn-danger btn-sm rounded-0 a-btn-slide-text">Delete</a>
                  </td>           
          </tr>
        {{/each}}
        {{else}}
        <tr>
              <td colspan="6" align="center">No record found.</td>                         
          </tr>
        {{/if}}
      </tbody>
    </table>
    {{> pagination}}
 
</div>
  </div>
</div>