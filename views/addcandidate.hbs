<h4 class="pb-4">{{#if id.candidate_id}}
        Update
        {{else}}
        Add
        {{/if}}   Candidate</h4>
<form method="post">
  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <input
        type="hidden"
        class="form-control"
        id="inputName"
        placeholder="Candidate Name"
        maxlength="100"
        name="id"
        value="{{id.candidate_id}}"
      />
      <input
        type="hidden"
        class="form-control"
        id="inputName"
        placeholder="Candidate Name"
        maxlength="100"
        name="_csrf"
        value="{{_csrf}}"
      />
    </div>
  </div>
  
  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">Candidate Name:</label>
    <div class="col-sm-10">
      <input
        type="text"
        class="form-control"
        id="inputName"
        placeholder="Candidate Name"
        maxlength="100"
        name="candidate_name"
        value="{{name candidate}}"
      />
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPositionApplied" class="col-sm-2 col-form-label">Position Applied for:</label>
    <div class="col-sm-10">
      <select class="form-control" aria-label="Default select example" name="position_applied">
        {{#each position_applied}}
    <option value={{this}} {{{isSelected @this}}}>
        {{this}}
    </option>
    {{/each}}        
      </select>
    </div>
  </div>
  <div class="form-group row">
    <label for="inputExperienceLevel" class="col-sm-2 col-form-label">Experience
      Level:</label>
    <div class="col-sm-10">
      <input
        type="text"
        name="experience_level"
        class="form-control"
        id="inputExperienceLevel"
        placeholder="Experience Level"
        maxlength="50"
        value="{{experience_level candidate}}"
      />
    </div>
  </div>
  <div class="form-group row">
    <label for="inputContactNo" class="col-sm-2 col-form-label">Contact Number:</label>
    <div class="col-sm-10">
      <input
        type="text"
        name="contact_no"
        class="form-control"
        id="inputContactNo"
        placeholder="Contact Number"
        maxlength="15"
        value="{{contact_no candidate}}"
      />
    </div>
  </div>
  <div class="form-group row">
    <label for="inputAddress" class="col-sm-2 col-form-label">Address:</label>
    <div class="col-sm-10">
      <input
        type="text"
        class="form-control"
        name="address"
        id="inputAddress"
        maxlength="250"
        placeholder="Address"
        value="{{address candidate}}"
      />
    </div>
  </div>
  <div class="form-group row">
    <label for="inputAddress" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary  align-items-right">
        {{#if id.candidate_id}}
        Update
        {{else}}
        Submit
        {{/if}}        
        </button>
    </div>
  </div>
  
</form>