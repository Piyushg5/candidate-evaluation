<div class="d-flex flex-column">  
  <div class="d-flex mb-4 flex-row">
    <h4 class="d-inline-block">Requirements</h4>
    <a
      href="/requirements/add"
      class="ml-2 btn btn-primary btn-sm"
      style="height: 31px;"
      type="button"
    >Add</a>
    <div class="ml-auto w-50">
  <form method="post" action="/requirements">
   {{> search}}
  </form>
</div>
  </div>
  <div>
    <table class="table d-block">
      <thead class="w-100 d-table">
        <tr>
          <th scope="col">Position</th>
          <th scope="col">Department</th>
          <th scope="col">Location</th>
          <th scope="col">Experience Level</th>
          <th scope="col">Project Name</th>
          <th scope="col">Approval</th>
          <th scope="col" class="col-md-3" style="text-align: center;"> Action</th>
        </tr>
      </thead>
      <tbody class="w-100 d-table">
        {{#if result}}
        {{#each result}}
          <tr>
              <td>{{position this}}</td>
              <td>{{department this}}</td>
              <td>{{job_location this }}</td>
              <td>{{experience_level this }}</td>              
              <td>{{project_name this}}</td>
              <td>{{approval this}}</td>
              <td align="right">
                  <a href="/requirement/view/{{id this}}" type="button" class="btn btn-primary btn-sm rounded-0 a-btn-slide-text">View</a>
                  <a href="/requirement/update/{{id this}}" type="button" class="btn btn-primary btn-sm rounded-0 a-btn-slide-text">Edit</a>
                  <a onclick="return confirm('Are you sure you want to delete this record?');" href="/requirement/delete/{{id this}}" type="button" class="btn btn-danger btn-sm rounded-0 a-btn-slide-text">Delete</a>
                  </td>           
          </tr>
        {{/each}}
        {{else}}
        <tr>
              <td colspan="6" align="center">No record found.</td>                         
          </tr>
        {{/if}}
      </tbody>
    </table>
     {{> pagination}}
  </div>
</div>